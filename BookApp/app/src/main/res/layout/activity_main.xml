<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.MainActivity"
    android:padding="20dp">
    
    <ImageView
        android:id="@+id/iconIV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/book"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />
        <!--layout_centerHorizontal=true: yatayda ortaya hizalla -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconIV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="KİTAP DÜNYASINA HOŞGELDİNİZ"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <!--layout_below="@id/iconIV": imageviewin ıd sini verdim onun altına hizzallaması için below kullandım-->
    
    <Button
        android:id="@+id/loginbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/notloginbtn"
        android:text="GİRİŞ YAP"
        android:textColor="@color/white"
        android:background="@drawable/shape_button01"
        android:layout_marginBottom="25dp"
        android:textSize="16sp" />
    <!--android:layout_above="@id/skipbtn": girilen ıd'nin üstüne hizzalar-->
    <Button
        android:id="@+id/notloginbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="GİRİŞ YAPMADAN DEVAM ET"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/shape_button02" />
    <!--android:layout_alignParentBottom="true": en alta hizalla demek.-->

</RelativeLayout>